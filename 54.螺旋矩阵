class Solution:
    def spiralOrder(self, matrix: List[List[int]]) -> List[int]:
        m,n = len(matrix),len(matrix[0]) #  行数，列数
        upper_bound,lower_bound = 0,m-1
        left_bound,right_bound = 0,n-1
        res = []
        while len(res) < m*n:
            if upper_bound <= lower_bound:
                for j in range(left_bound,right_bound + 1):
                    res.append(matrix[upper_bound][j])
                upper_bound += 1
            if left_bound <= right_bound:
                for j in range(upper_bound,lower_bound+1):
                    res.append(matrix[j][right_bound])
                right_bound -= 1
            if upper_bound <= lower_bound:
                for j in range(right_bound,left_bound-1,-1):
                     res.append(matrix[lower_bound][j])
                lower_bound -= 1
            if left_bound <= right_bound:
                for j in range(lower_bound,upper_bound-1,-1):
                    res.append(matrix[j][left_bound])
                left_bound += 1
        return res
        
