class Solution:
    def minWindow(self, s: str, t: str) -> str:
        need,window = {},{}
        val = 0
        length = float('inf')
        left,right = 0,0
        for c in t:
            need[c] = need.get(c,0) + 1
        while right < len(s):
            c = s[right]
            right += 1
            if c in need:
                window[c] = window.get(c,0)+1
                if window[c] == need[c]:
                    val += 1
            while val == len(need): #需要在这里进行循环判断是否是最短子串
                # 子串更新
                if  right - left < length:
                    start = left
                    length = right - left
                d = s[left]
                left += 1
                if d in need:
                    if need[d] == window[d]:
                        val -= 1
                    window[d] -= 1
        return '' if length == float('inf') else s[start : start + length]
#2026-1-21复习
