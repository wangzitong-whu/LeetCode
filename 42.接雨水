class Solution:
    def trap(self, height: List[int]) -> int:
        n = len(height)
        pre_max = [0] * n
        pre_max[0] = height[0]
        for i in range(1,n):
            pre_max[i] = max(pre_max[i-1],height[i])
        back_max = [0] * n
        back_max[-1] = height[-1]
        for j in range(n-2,-1,-1):
            back_max[j] = max(back_max[j+1],height[j])
        ans = 0
        for h,pre,back in zip(height,pre_max,back_max):
            ans += min(pre,back) - h
        return ans
